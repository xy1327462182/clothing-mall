/* pages/home/home.wxss */
.home{
  padding-top: 90rpx;
  background-color: #f4f4f4;
}
.home .search_bar {
  width: 100%;
  height: auto;
  color: #fff;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
}
.home .search_bar .search_bar_icons{
  font-size: 38rpx;
}
.home .search_bar .search_bar_txt{
  font-size: 24rpx;
}
.home .swiper_image{
  height: 100%;
}
.home .home_nav_wrap{
  position: relative;
  width: auto;
  margin: 20rpx;
  border-radius: 24rpx;
  background-image: linear-gradient(to bottom right,#fd6b9b,#fbdbde);
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgb(0 0 0 / 10%);
  padding-top: 76rpx;
  padding-left: 13rpx;
  padding-bottom: 13rpx;
  padding-right: 13rpx;
}
.home .home_nav_wrap .nav_title{
  position: absolute;
  left: 100rpx;
  top: 17rpx;
  font-size: 36rpx;
  font-weight: 550;
}
.home .home_nav_wrap .nav_content{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 18rpx;
}
.home .home_nav_wrap .nav_item{
  width: 22%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  padding-top: 14rpx;
  padding-bottom: 14rpx;
}
.home .home_nav_wrap .nav_item .nav_item_icon{
  width: 60%;
  border-radius: 50%;
  overflow: hidden;
}
.home .home_nav_wrap .nav_item .nav_item_txt{
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}
.home .recommend_goods_wrap {
  padding: 20rpx 10rpx;
}
.home .recommend_title {
  font-size: 40rpx;
  font-weight: 700;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
}
.home .recommend_goods_content{
  display: flex;
}
.home .recommend_goods_content .recommend_goods_column{
  margin: 10rpx;
  width: 345rpx;
  display: flex;
  flex-flow: column nowrap;
}
.home .recommend_shops_wrap {
  padding: 20rpx 10rpx;
}
.home .recommend_shops_wrap .recommend_shop_item{
  border-radius: 26rpx;
  background-color: #fff;
  overflow: hidden;
  padding: 35rpx 25rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 12rpx #ebedf0;
  margin-bottom: 16rpx;
}
.recommend_shop_item .recommend_shop_item_left_wrapper{
  width: 180rpx;
}
.recommend_shop_item_left_wrapper .shop_item_image{
  border-radius: 10rpx;
  overflow: hidden;
}
.recommend_shop_item .recommend_shop_item_right_wrapper{
  width: 480rpx;
  display: flex;
  flex-flow: column nowrap;
}
.recommend_shop_item_right_wrapper .shop_title{
  width: 100%;
  font-size: 30rpx;
  font-weight: 700;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.recommend_shop_item_right_wrapper .rate_wrapper{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}
.rate_wrapper .rate_txt{
  color: #444;
  font-size: 27rpx;
}
.rate_wrapper .rate_num{
  color: #444;
  font-size: 27rpx;
  margin-left: 14rpx;
}
.shop_sales_wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.shop_sales_wrapper .sales_num{
  color: #444;
  font-size: 27rpx;
}
.shop_sales_wrapper .shipping_wrapper .van-tag {
  margin-left: 10rpx;
}
.shop_tags_wrapper{
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  margin-top: 10rpx;
}
.shop_tags_wrapper .discount_tag_txt{
  color: #444;
  font-size: 27rpx;
}
.shop_tags_wrapper .van-tag{
  margin-right: 10rpx;
}
