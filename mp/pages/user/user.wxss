/* pages/user/user.wxss */
.user {
  background-color: #f4f4f4;
  min-height: 100vh;
}
.user .user_wrapper {
  height: 280rpx;
  background-color: #ff5272;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.user .top_setting_wrapper {
  padding-right: 10rpx;
  height: 70rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.user .top_setting_icon {
  margin-left: 30rpx;
  font-size: 40rpx;
}

.user .avatar_wrapper {
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: flex;
  align-items: center;
}
.user_avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 45rpx;
}
.avatar_wrapper .avatar_info_wrap{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.nick_name{
  font-weight: 700;
  letter-spacing: .1rpx;
}
.v1 {
  display: inline-block;
  background-color: rgba(0,0,0,.2);
  font-size: 22rpx;
  color: #fff;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  padding-left: 12rpx;
  padding-right: 12rpx;
  border-radius: 14rpx;
}

.user .collect_wrapper {
  width: auto;
  height: 120rpx;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgb(0 0 0 / 10%);
  margin: -30rpx 24rpx 24rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.collect_wrapper .collect_item {
 display: flex;
 flex-flow: column nowrap;
 justify-content: center;
 align-items: center;
 font-size: 26rpx;
}
.collect_item .collect_item_num {
  color: #222;
  font-weight: 700;
  font-size: 30rpx;
}
.collect_item .collect_item_title {
  color: #777;
  margin-top: 6rpx;
}

.card_util {
  width: auto;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgb(0 0 0 / 10%);
  margin: 0 24rpx 24rpx;
  border-radius: 20rpx;
  padding: 26rpx;
}
.card_util .card_title_wrap {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card_util .card_title_wrap .card_title {
  font-size: 34rpx;
  font-weight: 700;
}
.card_util .more_wrap {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.card_util .card_content {
  width: 100%;
  display: flex;
  justify-content:space-around;
  align-items: center;
  margin-top: 25rpx;
}
.card_content .order_item {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
}
.order_item .order_item_icon {
  font-size: 50rpx;
  color: #ff5272;
}
.order_item .order_item_txt {
  font-size: 26rpx;
  color: #777;
  margin-top: 10rpx;
}