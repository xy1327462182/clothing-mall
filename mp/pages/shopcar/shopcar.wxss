} */

.shopcar_content {
  padding: 30rpx 24rpx 100rpx;
}
.shopcar_item {
  width: auto;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgb(0 0 0 / 10%);
  border-radius: 20rpx;
  padding: 32rpx 20rpx 18rpx;
  margin-bottom: 28rpx;
}
.shopcar_item .shop_name_wrapper {
  font-weight: 700;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.shop_name_icon {
  margin-right: 10rpx;
}

.shopcar_goods_list {
  padding-top: 32rpx;
}
.shopcar_goods_item {
  margin-bottom: 32rpx;
  /* height: 220rpx; */
  padding-top: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #f8f8f8;
}
.shopcar_goods_item .goods_item_checked_wrapper {
  height: 186rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shopcar_goods_item .goods_item_image {
  width: 186rpx;
  height: 186rpx;
  border: .5rpx solid #eee;
  border-radius: 20rpx;
  overflow: hidden;
}
.shopcar_goods_item .goods_item_info {
  width: 400rpx;
  height: 100%;
}
.shopcar_goods_item .goods_item_info .goods_item_title {
  font-size: 28rpx;
  color: #222;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden;
  margin-bottom: 26rpx;
}

.goods_item_shipping_wrapper {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 28rpx;
  margin-bottom: 16rpx;
}
.shipping_txt {
  font-size: 26rpx;
  color: #555;
}

.singlePrice_wrapper {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price_wrap {
  font-size: 30rpx;
  font-weight: 700;
  color: #ff4142;
}
.rmb_icon{
  font-size: 28rpx;
  font-weight: 700;
}

.discount_wrapper {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}
.discount_txt {
  font-size: 26rpx;
  color: #ff5500;
}
.discount_final_price_txt {
  color: #ff4142;
  font-weight: 700;
  font-size: 30rpx;
}

.none_shopcar {
  background-color: #f4f4f4;
  min-height: 100vh;
  padding-top: 100rpx;
}
.none_content {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  margin-bottom: 80rpx;
}
.none_shopcar_img {
  width: 240rpx;
  height: 240rpx;
}
.none_shopcar_txt {
  color: #333;
  font-size: 32rpx;
  margin-top: 30rpx;
}